<div id="start" data-role="page" data-fullscreen="false">
  <div data-role="header">
    <h1>記録する</h1>
    <%= link_to 'ログアウト', logout_path, :class => "ui-btn-right" %>
  </div>
  <%= render "layouts/header_menu" %>
  <div id="current_theme">
    <%= form_tag themes_set_path do -%>
      <%= select :theme, :id, current_user.themes.all.collect{|i| [i.title, i.id] }, {:selected => session[:theme_id]}, {:onchange => "this.form.submit();", "data-role" => "none"} %>
    <% end %>
  </div>
  <div data-role="content">
    <%= render "layouts/flash_message" %>
    <%= render 'motivations/form_smart_phone' %>
  </div>
  <%= render 'layouts/footer_menu' %>
</div>
