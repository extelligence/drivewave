<div id="themes" data-role="page" data-fullscreen="false">
  <div data-role="header" data-backbtn="true">
    <h1>実現リスト</h1>
    <%= link_to 'ログアウト', logout_path, :class => "ui-btn-right" %>
  </div>
  <%= render "layouts/header_menu" %>
  <div data-role="content">
    <% render "layouts/flash_message" %>
    <ul data-role="listview" data-inset="false">
      <li data-theme="a"><%= link_to '<新しいゴールを作成する>', new_theme_path %></li>
      <li data-role="list-divider" data-theme="a">テーマ一覧</li>
      <% @themes.each do |t| %>
        <li>
        <span><%= t.title %></span>
        <%= link_to '', t %>
        <%= link_to 'グラフ', {:action => "graph", :id => t.id}, "data-theme" => "c", "data-icon" => "info" %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= render 'layouts/footer_menu' %>
</div>
